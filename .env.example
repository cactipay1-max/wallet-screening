DATABASE_URL=postgres://user:password@localhost:5432/wallet_screening
PORT=3000
ETHERSCAN_API_KEY=your_key_here
ETHERSCAN_BASE_URL=https://api.etherscan.io/v2/api

# Screening tuning (all optional — shown values are defaults)
HOP1_MAX=10                  # max hop-1 counterparties to check
HOP2_MAX_PER_HOP1=5          # max hop-2 counterparties per hop-1 address
MAX_TX_SCAN_PER_ADDRESS=200  # txs fetched per address per Etherscan call
MAX_ETHERSCAN_CALLS=20       # global per-screen Etherscan call budget
ETHERSCAN_SLEEP_MS=250       # ms sleep between Etherscan call pairs

# Demo mode (invisible to UI — use for video demos / offline testing)
DEMO_MODE=0                  # set to 1 to skip Etherscan and use demo/graph.json
ADMIN_TOKEN=change_me        # required for POST /admin/seed-demo (DEMO_MODE=1 only)

# Optional
DEBUG_SQL=false
